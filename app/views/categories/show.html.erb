<p id="notice"><%= notice %></p>
<% if @category.public? %>
  <h3><%= @category.name %></h3>
  <table class="table">
    <thead>
      <tr>
        <th>Parent Category</th>
        <th>Public Status</th>
        <th>Subcategories</th>
        <th>Bookmarks</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @category.parent %></td>
        <td><%= @category.public_cat? %></td>
        <td><%= @category.subcategories_names %></td>
        <td><%= @category.bookmark_count %></td>
      </tr>
    </tbody>
  </table>
  <h5><%= @category.name %> Bookmarks</h5>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Categories</th>
        <th>Types</th>
        <th colspan="3"></th>  
      </tr>
    </thead>
    <tbody>
      <%= render 'bookmarks/index' %>
    </tbody>
  </table>
  <%= link_to 'API EndPoint', api_path(@category) %>
  <%= link_to 'Edit', edit_category_path(@category) %>
<% else %>
  <h5>Sorry!</h5>
  <h6><%= @category.name %> is a private category</h6>
<% end %>

<%= link_to 'Back', categories_path %>
