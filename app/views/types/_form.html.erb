<%= form_with(model: type) do |form| %>
  <% if type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(type.errors.count, "error") %> prohibited this type from being saved:</h2>

      <ul>
        <% type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name , class: 'form-control form-control-sm', placeholder: 'Enter a title for your type'%>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: "btn btn-sm btn-primary my-3"%>
  </div>
<% end %>
